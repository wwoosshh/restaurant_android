<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 환영 메시지 -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="맛집 추천 앱에 오신 것을 환영합니다!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/primary_text" />

    <!-- 인증 버튼 -->
    <Button
        android:id="@+id/buttonAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button" />

    <!-- 검색 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="맛집 이름, 카테고리, 주소 검색"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- 카테고리 필터 버튼들 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCategoryAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/buttonCategoryKorean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한식"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/buttonCategoryChinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중식"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/buttonCategoryJapanese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일식"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/buttonCategoryWestern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양식"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- 기능 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonBookmarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="북마크"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/buttonFavorites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="즐겨찾기"
            android:layout_marginEnd="8dp"
            android:enabled="false"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="새로고침"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- 결과 카운트 -->
    <TextView
        android:id="@+id/textViewResultCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="총 0개의 맛집"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/secondary_text" />

    <!-- 로딩 프로그레스바 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- 맛집 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRestaurants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_restaurant" />

</LinearLayout>