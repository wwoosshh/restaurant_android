<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 맛집 기본 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- 맛집 이미지 (향후 구현) -->
            <ImageView
                android:id="@+id/imageViewRestaurant"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:background="@color/image_placeholder"
                android:scaleType="centerCrop"
                android:contentDescription="맛집 이미지"
                tools:src="@drawable/ic_restaurant_24" />

            <!-- 맛집 정보 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 맛집 이름 -->
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="맛집 이름"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="서울 맛집" />

                <!-- 카테고리 -->
                <TextView
                    android:id="@+id/textViewCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:background="@drawable/bg_category_chip"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp"
                    tools:text="한식" />

            </LinearLayout>

            <!-- 북마크/즐겨찾기 버튼 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonBookmark"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bookmark_border_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="북마크"
                    android:layout_marginBottom="4dp" />

                <ImageButton
                    android:id="@+id/buttonFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_favorite_border_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="즐겨찾기" />

            </LinearLayout>

        </LinearLayout>

        <!-- 주소 -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_location_on_24"
            android:drawablePadding="4dp"
            tools:text="서울특별시 강남구 테헤란로 123" />

        <!-- 평점 및 추가 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 평점 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_24"
                    android:contentDescription="평점" />

                <TextView
                    android:id="@+id/textViewRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginStart="2dp"
                    tools:text="4.5" />

                <TextView
                    android:id="@+id/textViewReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(123)"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginStart="2dp"
                    tools:text="(123)" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/divider"
                android:layout_marginHorizontal="8dp" />

            <!-- 가격대 -->
            <TextView
                android:id="@+id/textViewPriceRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                tools:text="보통" />

            <!-- 공간 채우기 -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 전화번호 (있는 경우만) -->
            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-1234-5678"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:visibility="gone"
                tools:text="02-123-4567"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 설명 (있는 경우만) -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="맛집 설명"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="이곳은 정말 맛있는 음식을 제공하는 곳입니다. 많은 사람들이 추천하는 맛집이에요!"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>