<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 및 네트워크 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 위치 권한 (맛집 검색용) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- 알림 권한 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".RestaurantApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantApp"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- 메인 액티비티 (런처) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RestaurantApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 인증 관련 액티비티 -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.RestaurantApp.NoActionBar" />
        
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.RestaurantApp.NoActionBar" />
        
        <!-- 맛집 상세 액티비티 -->
        <activity
            android:name=".ui.detail.RestaurantDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RestaurantApp.NoActionBar"
            android:parentActivityName=".MainActivity" />
        
        <!-- 즐겨찾기 액티비티 -->
        <activity
            android:name=".ui.favorites.FavoritesActivity"
            android:exported="false"
            android:theme="@style/Theme.RestaurantApp.NoActionBar"
            android:parentActivityName=".MainActivity" />
        
        <!-- 카테고리 상세 액티비티 -->
        <activity
            android:name=".ui.category.CategoryDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RestaurantApp.NoActionBar"
            android:parentActivityName=".MainActivity" />
            
    </application>

</manifest>